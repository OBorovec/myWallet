<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="@dimen/drawer_header_vertical_margin"
    android:paddingBottom="@dimen/drawer_header_vertical_margin"
    android:paddingLeft="@dimen/drawer_header_horizontal_margin"
    android:paddingRight="@dimen/drawer_header_horizontal_margin" >

    <ImageView
        android:id="@+id/drawer_header_main_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/icm_user" />

</LinearLayout>
